<h1><%= @cocktail.name %></h1>

<% @cocktail.doses.each do |dose| %>
  <div class="card">
    <p><%= Ingredient.find(dose.ingredient_id).name %></p>
    <p><%= dose.description %></p>
    <p><%= link_to 'Delete', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %></p>
  </div>
<% end %>

<p><%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %></p>


