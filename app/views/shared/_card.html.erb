<div class="card mb-5" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo.key, crop: :fill %>')">
  <div class="card-body">
    <%= link_to cocktail.name, cocktail_path(cocktail.id), class: 'card-title text-decoration-none text-white' %>
    <ul class="mt-3">
      <% cocktail.ingredients.each do |ingredient| %>
        <li><%= ingredient.name %></li>
      <% end %>
    </ul>
  </div>
</div>

